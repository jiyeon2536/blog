---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['glass-card', className]}>
  <slot />
</div>

<style>
  .glass-card {
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border: 1px solid var(--glass-border-subtle);
    box-shadow: var(--glass-shadow), 0 1px 0 var(--glass-border);
    border-radius: var(--glass-radius);
    overflow: hidden;
    transition: transform var(--transition-fast), box-shadow var(--transition-smooth);
  }

  .glass-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 32px rgba(27, 94, 32, 0.08), 0 1px 0 var(--glass-border);
  }

  .dark .glass-card:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.35), 0 1px 0 var(--glass-border-subtle);
  }
</style>
